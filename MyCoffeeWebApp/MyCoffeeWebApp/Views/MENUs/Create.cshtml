@model MyCoffeeWebApp.MENU

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    
    <div class="card mb-4">
        <h5 class="card-header">Thêm đồ uống</h5>
        <hr />
        <div class="card-body">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3 row">
                @Html.LabelFor(model => model.MN_PRODUCTNAME, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MN_PRODUCTNAME, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MN_PRODUCTNAME, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="mb-3 row">
                @Html.LabelFor(model => model.MN_PRICE, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MN_PRICE, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MN_PRICE, "", new { @class = "text-danger" })
                </div>
            </div>

         

            <div class="form-group">
                <div class="d-flex justify-content-center mt-3">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
            </div>
            <div class="d-flex justify-content-center mt-3">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


<script>
    var ulNgayVaGiaCa = document.getElementById("NgayVaGiaCa");
    ulNgayVaGiaCa.classList.add("d-block");
    var liNgay = document.getElementById("menu");
    liNgay.classList.add("active");
    document.getElementById('searchInputBox').classList.add("d-none")
</script>