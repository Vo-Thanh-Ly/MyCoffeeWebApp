@model IEnumerable<MyCoffeeWebApp.DATE>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Thêm ngày")
</p>




<div class="card">
    <h5>Các ngày ghi nhận</h5>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DATE1)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.date_name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.note)
                        </th>
                        <th></th>
                    </tr>
                </thead>


           
                
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Html.Raw(item.DATE1.Date.ToString("dd/MM/yyyy"))</strong>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.date_name)</td>

                        <td><span class="fab fa-angular fa-lg text-danger me-3"> @Html.DisplayFor(modelItem => item.note)</span></td>
                        <td>
                            <div class="dropdown">
                                <button type="button"
                                        class="btn p-0 dropdown-toggle hide-arrow"
                                        data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("Edit", "DATEs", new { id = item.DATE1.ToString("MM-dd-yyyy") })"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="@Url.Action("Delete", "DATEs", new { id = item.DATE1.ToString("MM-dd-yyyy") })"><i class="bx bx-trash me-1"></i> Delete</a>
                                    <a class="dropdown-item" href="@Url.Action("Details", "DATEs", new { id = item.DATE1.ToString("MM-dd-yyyy") })"><i class="bx bx-info-circle me-1"></i> Details</a>
                                </div>
                            </div>
                        </td>

                    </tr>
                }
                    
                </table>
        </div>
    </div>
</div>