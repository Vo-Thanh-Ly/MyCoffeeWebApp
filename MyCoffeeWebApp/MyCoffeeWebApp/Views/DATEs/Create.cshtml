@model MyCoffeeWebApp.DATE

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="card mb-4">
            <h5 class="card-header">Thêm ngày</h5>
            <div class="card-body">


                <div class="mb-3 row">
                    @Html.LabelFor(model => model.DATE1, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DATE1, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.DATE1, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="mb-3 row">
                    @Html.LabelFor(model => model.date_name, htmlAttributes: new { @class = "col-md-2 col-form-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.date_name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.date_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="mb-3 row">
                    @Html.LabelFor(model => model.date_name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <textarea id="date_name" name="date_name" class="form-control"></textarea>
                        @Html.ValidationMessageFor(model => model.date_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="d-flex justify-content-center mt-3">
                        <input type="submit" value="Create" class="btn btn-info" />
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-3">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        





}




<script>
    var ulNgayVaGiaCa = document.getElementById("NgayVaGiaCa");
    ulNgayVaGiaCa.classList.add("d-block");
    var liNgay = document.getElementById("Ngay");
    liNgay.classList.add("active");
</script>